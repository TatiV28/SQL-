-- Create tables for jobs, candidates, and applications
CREATE TABLE Jobs (
    job_id INT PRIMARY KEY,
    title VARCHAR(50)
);

CREATE TABLE Candidates (
    candidate_id INT PRIMARY KEY,
    name VARCHAR(50)
);

CREATE TABLE Applications (
    application_id INT PRIMARY KEY,
    job_id INT,
    candidate_id INT,
    application_date DATE,
    FOREIGN KEY (job_id) REFERENCES Jobs(job_id),
    FOREIGN KEY (candidate_id) REFERENCES Candidates(candidate_id)
);

-- Insert sample data
INSERT INTO Jobs VALUES (1, 'SQL Developer');
INSERT INTO Candidates VALUES (1, 'Noah');
INSERT INTO Applications VALUES (1, 1, 1, '2025-01-01');

-- Query: Count applications per job
SELECT j.title, COUNT(a.application_id) AS application_count
FROM Jobs j
LEFT JOIN Applications a ON j.job_id = a.job_id
GROUP BY j.title;
